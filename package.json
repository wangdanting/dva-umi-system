{
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "test": "umi test",
    "lint": "eslint --ext .js src && yarn lint:style && yarn lint:prettier",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --fix --ext .js src",
    "lint-staged:style": "stylelint --fix 'src/**/*.less' --syntax less",
    "lint:style": "stylelint 'src/**/*.less' --syntax less",
    "lint:fix": "eslint --fix --ext .js src && stylelint --fix 'src/**/*.less' --syntax less",
    "precommit": "lint-staged",
    "lint:prettier": "check-prettier lint"
  },
  "dependencies": {
    "antd": "^3.16.5",
    "dva": "^2.4.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "antd-pro-merge-less": "^1.0.0",
    "antd-theme-webpack-plugin": "^1.2.0",
    "babel-eslint": "^10.0.1",
    "check-prettier": "^1.0.1",
    "eslint": "5.3.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-umi": "^1.4.2",
    "eslint-plugin-compat": "^3.1.1",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "react-test-renderer": "^16.7.0",
    "stylelint": "^10.0.1",
    "stylelint-config-css-modules": "^1.4.0",
    "stylelint-config-prettier": "^5.1.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.0.0",
    "stylelint-order": "^3.0.0",
    "umi": "^2.6.14",
    "umi-plugin-react": "^1.7.4"
  },
  "lint-staged": {
    "**/*.{js, json, less, md}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js, jsx}": [
      "yarn lint-staged:js",
      "git add"
    ],
    "**/*.less": [
      "yarn lint-staged:style",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
